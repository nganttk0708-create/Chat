extends ../../layouts/auth.pug

block main
    .login-wrapper
        .login-box
            h1.text-center.mb-4 Đăng ký

            form(action="/auth/register" method="POST")
                .form-group.mb-4
                    label.form-label(for="username") Tên đăng nhập
                    input#username.form-control(type="text", name="fullName", required)

                .form-group.mb-4
                    label.form-label(for="email") Email
                    input#email.form-control(type="email", name="email", required)

                .form-group.mb-4
                    label.form-label(for="phone") Số điện thoại
                    input#phone.form-control(type="tel", name="numberPhone", required, pattern="[0-9]{10}")

                .form-group.mb-4
                    label.form-label(for="password") Mật khẩu
                    input#password.form-control(type="password", name="password", required)

                .d.d-flex.justify-content-between.align-items-center.flex-wrap.gap-3
                    button.btn.btn-login(type="submit") Đăng ký
                    a.btn.btn-register(href="/auth/login") Đăng nhập
